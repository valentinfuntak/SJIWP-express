<div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md">
            {{#if status.display_form}}
            <form method="post" action="/users/signin">
                <h1 class="text-5xl font-bold">Prijava korisnika</h1>
                <div class="py-6">
                    <div>
                        <label class="form-control w-full max-w-xs">
                            <div class="label">
                                <span class="label-text">E-mail adresa</span>
                            </div>
                            <input type="email" name="email" placeholder="Upišite e-mail adresu ovdje..."
                                class="input input-bordered w-full max-w-xs" required="" maxlength="50" />
                        </label>
                    </div>
                    <div>
                        <label class="form-control w-full max-w-xs">
                            <div class="label">
                                <span class="label-text">Zaporka</span>
                            </div>
                            <input type="password" name="password" placeholder="Upišite zaporku ovdje..."
                                class="input input-bordered w-full max-w-xs" required="" maxlength="50" />
                        </label>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" value="Potvrdi" />
                <input type="reset" class="btn btn-neutral" value="Poništi" />
            </form>
            {{/if}}
            {{#if status.submit_form}}
            {{#if status.error}}
            <div role="alert" class="alert alert-warning">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span>Provjerite podatke!</span>
            </div>
            {{/if}}
            {{#unless status.error}}
            <div role="alert" class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Prijava uspješna!</span>
            </div>
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div>