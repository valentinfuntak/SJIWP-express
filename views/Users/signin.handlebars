<div class="hero min-h-screen bg-base-200">
    <div class="hero-content text-center">
        <div class="max-w-md">
            <h1 class="text-5xl font-bold">{{title}}</h1>
            <div class="py-6 flex flex-col items-center">
                <div class="">
                    <label class="form-control w-full max-w-xs">
                        <div class="label">
                            <span class="label-text">Korisničko ime</span>
                        </div>
                        <input type="text" name="username" placeholder="Upišite korisničko ime ovdje..."
                            class="input input-bordered w-full max-w-xs" />
                    </label>
                </div>
                <div>
                    <label class="form-control w-full max-w-xs">
                        <div class="label">
                            <span class="label-text">Zaporka</span>
                        </div>
                        <input type="password" name="password" placeholder="Upišite zaporku ovdje..."
                            class="input input-bordered w-full max-w-xs" />
                    </label>
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Potvrdi" />
            <input type="reset" class="btn btn-neutral" value="Poništi" />
        </div>
    </div>
</div>