<div class="hero min-h-screen bg-base-200">
    <div class="hero-content">
        <div class="max-w-md">
            <form method="post" action="/Users/applay">
                <div>
                    <h1 class="text-5xl font-bold">Prijava na natjecanje</h1>
                </div>
                <div class="py-6">
                    <div>
                        <label class="form-control w-full max-w-xs">
                            <div class="label">
                                <span class="label-text">Ime</span>
                            </div>
                            <input type="text" name="ime" placeholder="Upišite svoje ime"
                                class="input input-bordered w-full max-w-xs" required="" />
                        </label>
                        <label class="form-control w-full max-w-xs">
                            <div class="label">
                                <span class="label-text">Identifikacijska sifra</span>
                            </div>
                            <input type="text" name="ident_sifra" placeholder="Izmislite svoju identifikacijsku sifru"
                                class="input input-bordered w-full max-w-xs" required="" />
                        </label>
                        <label class="form-control w-full max-w-xs">
                            <div class="label">
                                <span class="label-text">ID natjecanja</span>
                            </div>
                            <input type="text" name="idnat" placeholder="Unesite ID natjecanja"
                                class="input input-bordered w-full max-w-xs" required="" />
                        </label>
                    </div>
                </div>
                <div class="flex-col space-x-3">      
                    <input type="submit" class="btn btn-primary" value="Potvrdi" />
                    <input type="reset" class="btn btn-neutral" value="Poništi" />
                </div>
            </form>
        </div>
    </div>
</div>